</head>
<body>
  <div class="container">
    <div display="hidden" id="loggedInUserId"> <%= user._id %> </div>

    <!-- PAGE  NAVIGATION BAR LIKE LOGOUT  -->
    <nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 left-0 border-b border-gray-200 dark:border-gray-600">
      <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <div class="flex md:order-2">
          <a href="/logout" class="btn btn-default btn-sm">Logout</a>
          <button data-collapse-toggle="navbar-sticky" type="button"
            class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
            aria-controls="navbar-sticky" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M1 1h15M1 7h15M1 13h15" />
            </svg>
          </button>
        </div>
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
        </div>
      </div>
    </nav>


    <!-- PAGE TITLE -->
    <div class="page-header text-center">
    
      <h1
        class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
        Beyond the HorizonüåÖ of Emotionsüåøüòå
      </h1>
    
    </div>


    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">

      <!-- MOOD/FEELINGS ACTION SUCH AS CREATE, FILTER, ETC -->
      <div class="flex items-center justify-between py-4 bg-white dark:bg-gray-800">
        <div>

          <button type="button" id="create"
            class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900" data-modal-target="static-modal" data-modal-toggle="static-modal" >üå±Mood of the Day ‚òÄÔ∏è</button>


        </div>

      </div>

          <!-- THIS IS MY TABLE CARDS WHEN CREATING POST  -->
      
      
        <!-- CREATING NEW IMAGE FOR EACH CARD -->
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
          <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                <th scope="col" class="px-16 py-3">
                  <span class="sr-only">Image</span>
                </th>
                <th scope="col" class="px-6 py-3">
                  In one word what makes you happy
                </th>
                <th scope="col" class="px-6 py-3">
                  Mood
                </th>
                <th scope="col" class="px-6 py-3">
                  Journal
                </th>
                <th scope="col" class="px-6 py-3">
                  ACTIONS
                </th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<feelings.length; i++) {%>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <td class="p-4">
                  <!-- CREATING NEW IMAGE FOR EACH CARD -->
                  <img src="<%= feelings[i].image %>" class="w-16 md:w-32 max-w-full max-h-full" alt="">
                </td>
                <!-- WHAT MAKES YOU HAPPY SECTION -->
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                  <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    <%= feelings[i].makesMeHappy %>
                  </p>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <!-- DIFF TYPES OF MOOD  -->
                    <!-- credit: https://stackoverflow.com/questions/63633427/switch-condition-statement-semicolon-error-inside-ejs-template -->
         
                    <% switch(feelings[i].mood) { 
                      case 'Happy' : %>
                        <span
                          class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Happy</span>
                        <% break; 
                      case 'Creative' : %>
                        <span
                          class="bg-purple-100 text-purple-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300">Creative</span>
                        <% break; 
                      case 'Grateful' : %>
                        <span
                          class="bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Grateful</span>
                        <% break; 
                      case 'Excited' : %>
                        <span
                          class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Excited</span>
                        <% break; 
                      case 'Sad' : %>
                        <span
                          class="bg-pink-100 text-pink-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300">Sad</span>
                        <% break; 
                      case 'Mad' : %>
                        <span
                          class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Mad</span>
                        <% break; 
                      case 'Tired' : %>
                        <span
                          class="bg-pink-100 text-pink-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-pink-900 dark:text-pink-300">Tired</span>
                        <% break; 
                    } %>
                  </div>
                </td>
                <td class="px-6 py-4 font-semibold text-gray-900 dark:text-white">
                  <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    <%= feelings[i].moodContent %>
                  </p>
                </td>
                <td class="px-6 py-4 flex items-center">
                  
                  <!-- If you are comparing mongoDB objectId, then use toString(). -->
                  <!-- credit : https://stackoverflow.com/questions/57661892/ejs-comparison-between-two-same-strings -->
                  <% if(feelings[i].creatorId.toString()==user._id.toString()) { %>

                      <button type="button" data-dropdown-toggle="apple-imac-20-dropdown"
                        class="actions-button text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" id="<%= feelings[i]._id %>"> Actions</button>

                      <div id="apple-imac-20-dropdown"
                        class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
                        <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="apple-imac-20-dropdown-button">
                          <li>
                            <a href="#" class="moodUpdate block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" data-modal-target="update-static-modal" data-modal-toggle="update-static-modal" >Edit Mood</a>
                          </li>
                        </ul>
                        <div class="py-1">
                          <a href="#"
                            class="trash block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">Delete</a>
                        </div>
                      </div>
                  <% } %>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
     


    <!-- UPDATE MOOD MODAL -->
    <div id="update-static-modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
      class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
      <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <!-- Modal header -->
          <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
              Updateüå±Mood üìã
            </h3>
            <button type="button"
              class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
              data-modal-hide="update-static-modal">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>

          <!-- Modal body -->
          <section class="bg-white dark:bg-gray-900">
            <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    
              <form>
                <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                  
    
                  
                  <!-- key "name = "id" sent to serve  & added type=hidden to hide it in the DOM -->
                  <input type="hidden" id="yourid" name="id" />
                  <div class="sm:col-span-2">
                    <div>
                      <label for="mood" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Select How Your Feeling</label>
                      <select name="mood" id="mood"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                        <option value="Happy">Happy</option>
                        <option value="Creative">Creative</option>
                        <option value="Grateful">Grateful</option>
                        <option value="Excited">Excited</option>
                        <option value="Sad">Sad</option>
                        <option value="Mad">Mad</option>
                        <option value="Tired">Tired</option>
                      </select>
                    </div>
                  </div>
                </div>
    
                <!-- Modal footer -->
                <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                  <button data-modal-hide="update-static-modal" type="button" 
                    class="updatebtn text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" >
                    Update Mood üå±</button>
                </div>
                <!-- bootstrap button -->
                <!-- <button type="submit" class="btn btn-outline-primary">POST BLOG</button> -->
              </form>
            </div>
          </section>
    
    
        </div>
      </div>
    </div>


      <!-- CREATE MOOD MODAL -->
    <div id="static-modal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true"
      class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
      <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <!-- Modal header -->
          <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            üå± Mood of the Day ‚òÄÔ∏è 
            </h3>
            <button type="button"
              class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
              data-modal-hide="static-modal">
              <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
              </svg>
              <span class="sr-only">Close modal</span>
            </button>
          </div>

          <!-- Modal body -->
    
          <section class="bg-white dark:bg-gray-900">
            <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">

              <form action="/feelings" method="POST">
                <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                  <div class="sm:col-span-2">
                    <label for="makesMeHappy" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">üå±One Thing that makes you Happy
                      </label>
                    <input type="text" placeholder="Family" name="makesMeHappy" id="modal-title"
                      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                      placeholder="One thing that makes you Happy" required="">
                  </div>

                  <div>
                    <label for="mood" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Select How Your Feeling</label>
                    <select name="mood" id="mood"
                      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                      <option>Happy</option>
                      <option>Creative</option>
                      <option>Grateful</option>
                      <option>Excited</option>
                      <option>Sad</option>
                      <option>Mad</option>
                      <option>Tired</option>
                    </select>
                  </div>
                  


    
                  <div>
                    <label for="image" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
                      Image for your Mood
                    </label>
                    <input type="text" name="image" id="modal-image"
                      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                      placeholder="https://imageURL.com/" required="">
                  </div>
                  <!-- key "name = "id" sent to serve  & added type=hidden to hide it in the DOM -->
                  <input type="hidden" id="creatorId" name="creatorId" value="<%= user._id %>" />
                  <div class="sm:col-span-2">
                    <label for="moodContent"
                      class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Journal Entry</label>
                    <textarea id="modal-description"  rows="8"
                      class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                      name="moodContent" placeholder="Enter your Feelings Here"></textarea>
                  </div>

                </div>


                
                <!-- Modal footer -->
                <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                  <button data-modal-hide="static-modal" type="submit" id="updatebtn"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    üå±Mood of the Day ‚òÄÔ∏è</button>
                </div>
                <!-- bootstrap button -->
                <!-- <button type="submit" class="btn btn-outline-primary">POST BLOG</button> -->
              </form>
            </div>
          </section>
    
    
        </div>
      </div>
    </div>

  <script src="main.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.0.0/flowbite.min.js"></script>

</body>
</html>
